#######################
# KEYBINDINGS
#######################

## System Controls

# Volume Controls
bindsym XF86AudioRaiseVolume exec ~/.local/bin/changeVolume +5%
bindsym XF86AudioLowerVolume exec ~/.local/bin/changeVolume -5%
bindsym XF86AudioMute exec ~/.local/bin/changeVolume toggle

# Media keys
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-sink-volume @DEFAULT_SINK@ +5% && notify-send -i audio-volume-high "Volume Up" "$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}')"
# bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-sink-volume @DEFAULT_SINK@ -5% && notify-send -i audio-volume-low "Volume Down" "$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}')"
# bindsym XF86AudioMute exec --no-startup-id wpctl set-sink-mute @DEFAULT_SINK@ toggle && notify-send -i audio-volume-muted "Audio" "Mute Toggled"

# Brightness Controls
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Media Player Controls
bindsym Ctrl+period exec playerctl next
bindsym Ctrl+comma exec playerctl previous

## Application Launchers
bindsym $mod+Return exec gnome-terminal -- fish
bindsym $mod+Shift+Return exec --no-startup-id kitty -e fish
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+c exec --no-startup-id copyq toggle
bindsym $mod+period exec /usr/bin/rofimoji
bindsym $mod+Shift+a exec ani-cli --rofi
bindsym $mod+Shift+n exec ~/.local/bin/dunst
bindsym $mod+Shift+t exec curd -rofi
bindsym $mod+Shift+f exec nemo
bindsym XF86Tools exec --no-startup-id spotify
bindsym XF86Mail exec --no-startup-id discord
bindsym XF86Calculator exec --no-startup-id rofi -show calc -modi calc -no-show-match -no-sort

## Window Management
bindsym $mod+Shift+q kill
bindsym $mod+Shift+x exec betterlockscreen -l dim
# bindsym $mod+Shift+x exec i3lock-fancy

# Focus control
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
