#######################
# BASIC SETTINGS
#######################

# Define mod key (Mod4 = Super/Windows key)
set $mod Mod4

# Font settings
font pango:DepartureMono Nerd Font 8.5
# font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows
floating_modifier $mod
tiling_drag modifier titlebar

# i3status refresh
set $refresh_i3status killall -SIGUSR1 i3status


#######################
# APPEARANCE
#######################

# Border settings
for_window [class=".*"] border pixel 0

# Gaps settings
gaps inner 5

#######################
# AUTOSTART APPLICATIONS
#######################

# System utilities
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id nm-applet
exec --no-startup-id copyq
exec_always --no-startup-id picom &

# Screen locking
exec --no-startup-id xss-lock -- betterlockscreen -l
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
# exec --no-startup-id xss-lock -- i3lock-fancy

# Power management
exec --no-startup-id xset s off          # Disable screensaver
exec --no-startup-id xset s noblank      # Disable screen blanking
exec --no-startup-id xset s noexpose     # Prevent screen from fading
exec --no-startup-id xset -dpms          # Disable power management

# Background/Wallpaper
exec --no-startup-id feh --bg-fill Desktop/Wall/HuTao.jpeg
# exec --no-startup-id feh --bg-fill Downloads/God_Lain.jpg
# exec --no-startup-id feh --randomize --bg-max Desktop/Wall/*

# Status bar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Other autostart applications
